{

//FONT
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrains Mono",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.lineHeight": 1.6,
  
  //FORMAT
  "editor.formatOnSave": true,
  
  //HINTS
  "editor.suggest.preview": true,
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",

  //CURSOR
  "editor.cursorSmoothCaretAnimation": true,
  
  //BRACKET
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  
  //CUSTOM THEME
    "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "editor.background": "#212121",
      "editorLineNumber.foreground": "#aaa",
      "editorLineNumber.activeForeground": "#7a7cff",
      "editor.lineHighlightBackground": "#262626",
      "editor.lineHighlightBorder": "#212121",

      "tab.activeBorderTop": "#7a7cff",
      "tab.activeBackground": "#212121",
      "tab.activeForeground": "#7a7cff",
      "tab.hoverForeground": "#7a7cff",
      "tab.inactiveForeground": "#ccc",

      "activityBar.background": "#262626",
      "activityBar.foreground": "#7a7cff",
      "activityBar.activeBackground": "#262626",
      "activityBar.activeFocusBorder": "#262626",
      "activityBarBadge.background": "#7a7cff",
      "activityBar.inactiveForeground": "#aaa",

      "statusBar.background": "#262626",

      "list.activeSelectionBackground": "#7a7cff8a",
      "list.focusOutline": "#7a7cff8a",
      "list.hoverBackground": "#7a7cff50",
      "list.activeSelectionForeground": "#eee",

      "sideBar.background": "#262626",

      "titleBar.activeBackground": "#333",
      "menu.background": "#333"
    }
  },
